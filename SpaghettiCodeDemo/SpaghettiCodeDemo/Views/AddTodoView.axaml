<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:SpaghettiCodeDemo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SpaghettiCodeDemo.Views.AddTodoView"
             x:DataType="viewModels:AddTodoViewModel">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Command="{Binding Cancel}">Cancel</Button>
        <Button DockPanel.Dock="Bottom" Command="{Binding Ok}">OK</Button>
        <TextBox AcceptsReturn="True"
                 Text="{Binding Name}"
                 Watermark="Enter your TODO"/>
    </DockPanel>
</UserControl>
