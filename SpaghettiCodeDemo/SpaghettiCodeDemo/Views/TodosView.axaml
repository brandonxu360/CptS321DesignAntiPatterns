<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:SpaghettiCodeDemo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SpaghettiCodeDemo.Views.TodosView"
             x:DataType="viewModels:TodosViewModel">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" DataContext="" Command="{Binding $parent[Window].((viewModels:MainWindowViewModel)DataContext).AddTodo}">
            Add a todo
        </Button>
        <Button DockPanel.Dock="Bottom" Command="{Binding ClearCompletedTodos}">Clear completed</Button>
        <ItemsControl ItemsSource="{Binding TodoItems}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox Margin="4"
                              IsChecked="{Binding IsChecked}"
                              Content="{Binding Name}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</UserControl>